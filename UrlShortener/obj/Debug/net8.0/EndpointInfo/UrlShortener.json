{
  "openapi": "3.0.4",
  "info": {
    "title": "UrlShortener",
    "version": "1.0"
  },
  "paths": {
    "/{shortCode}": {
      "get": {
        "tags": [
          "Redirect"
        ],
        "summary": "Перенаправляет по короткой ссылке",
        "parameters": [
          {
            "name": "shortCode",
            "in": "path",
            "description": "Код короткой ссылки",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Редирект на длинный URL"
          },
          "404": {
            "description": "Ссылка не найдена",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/UrlApi": {
      "post": {
        "tags": [
          "UrlApi"
        ],
        "summary": "Создаёт короткую ссылку по длинному URL",
        "requestBody": {
          "description": "Модель с длинным URL",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateShortUrlRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateShortUrlRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateShortUrlRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Короткая ссылка успешно создана"
          },
          "400": {
            "description": "Невалидный формат URL",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateShortUrlRequest": {
        "type": "object",
        "properties": {
          "longUrl": {
            "type": "string",
            "description": "Исходный длинный URL, который нужно сократить",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    }
  }
}